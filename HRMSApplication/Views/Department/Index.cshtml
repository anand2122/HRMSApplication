@model IEnumerable<HRMSApplication.Core.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Department</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Department No</th>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentNo</td>
                <td>@department.Name</td>
                <td>@department.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>